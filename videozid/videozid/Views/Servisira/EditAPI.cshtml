@model videozid.Models.Servisira

@{
    ViewData["Title"] = "Servisira";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Uredi servisira</title>
</head>
<body>
 
<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Servisira</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="IdServis" class="control-label col-md-2">Servis</label>
            <div class="col-md-10">
                <select asp-for="IdServis" class="form-control" asp-items="ViewBag.IdServis"></select>
                <span asp-validation-for="IdServis" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdUredaj" class="control-label col-md-2">Uređaj</label>
            <div class="col-md-10">
                <select asp-for="IdUredaj" class="form-control" asp-items="ViewBag.IdUredaj"></select>
                <span asp-validation-for="IdUredaj" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi promijene" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-primary" asp-action="Index">Servisera</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
