@model IEnumerable<videozid.Models.Servisira>


@{
    ViewData["Title"] = "Servisira";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Servisira</title>

    <script>

        function deleteRow(id) {
            $.ajax({
                type: "DELETE",
                url: "/api/servisira/delete/" + id,
                data: { id: id },
                ajaxasync: true,
                success: function (data) {
                    $('#tablica').DataTable()
                        .row(document.getElementById('row-'.concat(id)))
                        .remove()
                        .draw();
                },
                error: function (data) {
                    alert(data);;
                }
            });
        }

        function changeWindow(action, id) {
            var url = "/api/servisira/"
            if (action != '') {
                url += action + "/";
            }

            if (id != '') {
                url += id;
            }

            window.location = url
        }

    </script>

</head>
<body>

    <div class="row">
        <br /> <br />
        <h3>Servisira</h3>
        <br />
    </div>

    <div class="row">
        @Html.Partial("TableViewAPI")
    </div>

    <div class="row">
        <p>
            <a class="btn btn-primary" asp-action="Create">Dodaj novi uređaj servisu</a>
        </p>
    </div>

</body>
</html>

@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css" />
}

@section scripts{
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tablica').DataTable();
        });

    </script>
}
