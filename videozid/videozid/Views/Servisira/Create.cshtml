@model videozid.Models.Servisira

@{
    ViewData["Title"] = "Servisira";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Servisira - stvori vezu</title>
</head>
<body>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Servisira</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdServis" class="col-md-2 control-label">Servis</label>
            <div class="col-md-10">
                <select asp-for="IdServis" class ="form-control" asp-items="ViewBag.IdServis"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdUredaj" class="col-md-2 control-label">Uređaj</label>
            <div class="col-md-10">
                <select asp-for="IdUredaj" class ="form-control" asp-items="ViewBag.IdUredaj"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Stvori" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-primary" asp-action="Index"> Servisira</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
