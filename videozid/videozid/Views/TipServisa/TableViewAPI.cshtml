@model IEnumerable<videozid.Models.TipServisa>

<table class="table table-bordered table-striped text-center" id="tablica">

    <thead>
        <tr>
            <th>Tip servisa</th>
            <th>Ime servisa</th>
            <th>Akcije</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
                {
            <tr id="row-@Html.DisplayFor(modelItem => item.Id)">
                <td>
                    @Html.DisplayFor(modelItem => item.Tip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdServisNavigation.Ime)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-default btn-sm" onclick="changeWindow('edit',@item.Id)"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a class="btn btn-info btn-sm" onclick="changeWindow('details',@item.Id)"><span class="glyphicon glyphicon-edit"></span></a>
                    </div>
                </td>
            </tr>
                }
    </tbody>
</table>