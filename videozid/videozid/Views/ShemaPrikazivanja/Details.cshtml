@model videozid.ViewModels.ShemaPrikazivanjaDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>ShemaPrikazivanja</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ShemaPrikazivanja.Naziv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShemaPrikazivanja.Naziv)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Podsheme)
        </dt>
            @foreach (var item in Model.Podsheme)
            {
                <dd>@item.IdPodshemeNavigation.Naziv</dd>
                <dd>Od : @item.Od</dd>
                <dd>Do : @item.Do</dd>

            }
            <dt>
                @Html.DisplayNameFor(model => model.ShemaPrikazivanja.Opis)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ShemaPrikazivanja.Opis)
            </dd>
</dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ShemaPrikazivanja.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
