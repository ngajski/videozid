@model videozid.Models.EkranZida

@{

    ViewData["Title"] = "Popis Ekrana";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EkranZida</h4>
    <hr />
    <dl class="dl-horizontal col-md-offset-1">
        <input type="hidden" asp-for="Id" />
        <dt> XKoord</dt>
        <dd> @Model.XKoord</dd>

        <dt> YKoord</dt>
        <dd> @Model.YKoord</dd>

        <dt> Naziv Uredaja</dt>
        <dd> @Model.IdUredajaNavigation.Naziv</dd>

        <dt> Naziv Videozida</dt>
        <dd> @Model.IdZidaNavigation.Naziv</dd>
    </dl>
</div>
<div>
    <form asp-action="Delete">
        <div class="form-actions no-color btn-group" role="group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-primary" asp-action="Index">Natrag na popis</a>
        </div>
    </form>
</div>