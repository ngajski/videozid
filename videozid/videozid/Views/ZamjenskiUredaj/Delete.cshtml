@model videozid.Models.ZamjenskiUredaj

@{

    ViewData["Title"] = "Popis Zamjenskih";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ZamjenskiUredaj</h4>
    <hr />
    <dl class="dl-horizontal col-md-offset-1">
        <input type="hidden" asp-for="Id" />
        <dt> Uredaj</dt>
        <dd> @Model.IdUredajaNavigation.Naziv</dd>

        <dt> Zamjena za </dt>
        <dd> @Model.IdZamjenaZaNavigation.Naziv</dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color btn-group" role="group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-primary" asp-action="Index">Natrag na popis</a>
        </div>
    </form>
</div>