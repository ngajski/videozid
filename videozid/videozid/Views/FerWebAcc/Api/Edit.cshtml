@{

    ViewData["Title"] = "WEB API FerWeb račun";
}

@model string

<h4>Uredi osnovne informacije o FerWeb računu</h4>

<div class="col-xs-12">
    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label">Lozinka</label>
        <div class="col-md-10">
            <input class="form-control" id="lozinka" />
        </div>
    </div>
    <br /><br />
    <div class="form-group">
        <label class="col-md-2 control-label">Dozvola server</label>
        <div class="col-md-10">
            <input class="form-control" id="dozvolaServer" />
        </div>
    </div>
    <br /><br />

    <div class="btn-group">
        <input id="submit" value="Gotovo" class="btn btn-success btn-sm" />
        <a class="btn btn-danger btn-sm" id="delete">Ukloni</a>
        <a class="btn btn-primary btn-sm" asp-controller="FerWebAcc" asp-action="ApiDetails" asp-route-id="@ViewBag.id">Detalji</a>
        <a class="btn btn-primary btn-sm" asp-controller="FerWebAcc" asp-action="ApiIndex">Popis računa</a>
    </div>
    <hr />
</div>

@section scripts {
    <script>
        var racun;
        $(document).ready(function () {
            getRacun();
            $("#submit").click(update);

            $("#delete").click(function () {
                if (confirm('Jesi li siguran?')) {
                    $.ajax({
                        type: "DELETE",
                        url: "../../api/FerWebAcc/Remove/" + "@Model",
                        ajaxasync: false,
                        success: function (data) {

                        },
                        error: function (data) {
                        }
                    });
                    window.location.replace("../ApiIndex")
                }

            })

        });


        function getRacun() {
            $.ajax({
                type: "GET",
                url: "../../api/FerWebAcc/Get/" + "@Model",
                ajaxasync: false,
                success: function (data) {
                    racun = data;
                    $("#lozinka")[0].value = racun.lozinka;
                    $("#dozvolaServer")[0].value = racun.dozvolaServer;
                },
                error: function (data) {
                    alert(data.responseText);
                }
            });
        }

        function update() {
            var lozinka = $("#lozinka")[0].value;
            if (lozinka == "") {
                alert("Lozinku je potrebno unijeti!");
                $("#lozinka")[0].select();
                return;
            }

            var dozvolaServer = $("#dozvolaServer")[0].value;
            if (dozvolaServer == "") {
                dozvolaServer = null;
            }

            var data = {
                "Lozinka": lozinka,
                "DozvolaServer": dozvolaServer
            }
            console.log(data);

            $.ajax({
                type: "PUT",
                url: "../../api/FerWebAcc/Update/" + racun.korisnickoIme,
                ajaxasync: true,
                data: JSON.stringify(data),
                processData: false,
                contentType: 'application/json',
                success: function (data) {
                    alert("Uspjeh!");
                },
                error: function (data) {
                    alert(data.responseText);
                }
            });
        }
    </script>
}
